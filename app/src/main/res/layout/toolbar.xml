<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorCustomToolbar"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">



        <ImageButton
            android:id="@+id/action_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="3"
            android:orderInCategory="200"
            android:src="@drawable/ic_map_black_48dp" />


        <LinearLayout
            android:id="@+id/linearSth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/action_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="User request"
                android:textSize="30dp"
                android:textStyle="bold"
                android:title="@string/action_textView" />

            <ImageButton

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@null"
                android:gravity="right"
                android:src="@drawable/ic_arrow_drop_down_black_48dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/action_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/ic_person_black_48dp"
            android:title="@string/action_profile" />


</LinearLayout>