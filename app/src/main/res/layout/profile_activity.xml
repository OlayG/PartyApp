<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGray"
    tools:context="com.olegsagenadatrytwo.partyapp.view.profileactivity.ProfileActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/colorLightGray">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="70dp"
            android:background="@drawable/round_frame_layout_pic"
            android:elevation="6dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civProfilePicture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/user"
                app:civ_border_color="#999999"
                app:civ_border_width="3dp" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="145dp"
            android:background="@drawable/round_frame_layout"
            android:elevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="80dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:id="@+id/llInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.olegsagenadatrytwo.partyapp.customviews.AutoResizeTextView
                        android:id="@+id/displayName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Party Organizer"
                        android:textColor="@color/colorPrimary"
                        android:textSize="40sp" />
                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="40sp"
                        android:visibility="gone"/>

                    <!--<com.olegsagenadatrytwo.partyapp.customviews.AutoResizeTextView-->
                    <!--android:id="@+id/tvPartyDistance"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="center"-->
                    <!--android:maxLines="2"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:text="Party Location"-->
                    <!--android:textColor="@color/colorPrimary"-->
                    <!--android:textSize="20sp" />-->

                    <com.olegsagenadatrytwo.partyapp.customviews.AutoResizeTextView
                        android:id="@+id/tvPartyRatings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:maxLines="2"
                        android:text="*****"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorCustomToolbar" />
                </LinearLayout>

                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/llDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llInfo"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
                </android.support.design.widget.CoordinatorLayout>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/ibEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_mode_edit_black_48dp" />

            <ImageButton
                android:id="@+id/ibSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="52dp"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_save_black_48dp"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>